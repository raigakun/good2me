<div class='editPage'>
  <div class="titleArea">
    <h1>Edit your Account</h1>
    <div class="text-center m-3">or</div>
    <%= link_to "back", :back %>
  </div>

    <div class='container'>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    

      <div class="form-group">
        <%= f.label :username %>
        <%= f.text_field :username, class: "form-control"%>
      </div>


    <div class="form-group">
      <%= f.label :password %> <i>(変更しない場合、空白で問題ありません。)</i>
      <% if @minimum_password_length %>
        <em><br><%= @minimum_password_length %> 文字以上入力してください</em>
      <% end %>
      <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation %><i>(変更しない場合、空白で問題ありません。)</i>
      <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
    </div>

    <div class="form-group">
      <%= f.label :変更前もしくは現在のパスワード %> 
      <%= f.password_field :current_password, class: "form-control", autocomplete: "current-password" %>
    </div>

    <div class="actions">
      <%= f.submit "Update", class: "btn submitBtn" %>
    </div>
  <% end %>


  <div class="yajirushi">
    <h3>アカウントを削除される方は・・・</h3>
  </div>
  <div class="yajirushi2">
    <h3>↓</h3>
  </div>



  <div class="titleArea2">
    <h3>Delete your Account</h3>
  </div>
  <div class="unhappy">
    <p>お待ちしております！ <%= button_to " See you soon!", registration_path(resource_name), data: { confirm: "Are you sure?" }, class: "btn submitBtn",method: :delete %></p>
  </div>
</div>


