<header class="header2">
  <nav class="nav2">
    <ul class="header_menu2">
      <li class="nav-link">
        <%= @group.name %>
      </li>
      <ul class="header_menu2_inner2">
        <li><%= link_to "Create Group Tasks", new_group_task_path(@group), class: "nav-link listNew2", method: :get %></li>
        <li><%= link_to "Edit Group",edit_group_path(@group), class: "nav-link listNew3", method: :get %></li>
      </ul>
    </ul>
  </nav>
</header>
<div class='groupcreate'> 
  <div class="titleArea">
    <h2>グループを編集</h2>
    <div class="text-center m-3">or</div>
    <%= link_to "トップページへ戻る", :back %>
  </div>

  <div class='container'>
    <%= form_for @group,local: true do |f| %>
      <div class= 'form-input'>グループ名
          <%= f.text_field :name, placeholder: "グループ名を入力してください",class: "form-control" %>
      </div>

      <div class= 'check-box'>メンバーを選択してください<br>   
          <%= f.collection_check_boxes :user_ids, User.all, :id, :username, class: "check-name" %>
      </div> 

      <div class="actions">
          <%= f.submit "グループを編集する", class: "btn submitBtn" %>
      </div>   
    <% end %>
  </div>  
</div>
